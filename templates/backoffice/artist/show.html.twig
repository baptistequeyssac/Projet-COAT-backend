{% extends 'base.html.twig' %}

{% block title %}L'artiste : {{ artist.pseudo }}{% endblock %}

{% block body %}
    <h1 class="title fs-3 text">Information de l'artiste : {{ artist.pseudo }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ artist.pseudo }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ artist.firstName }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ artist.birthdate ? artist.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ artist.image }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ artist.bio }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ artist.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ artist.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ artist.address }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ artist.region.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ artist.createdAt ? artist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ artist.updatedAt ? artist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a  href="{{ path('app_backoffice_artist_index') }}"><button type="button" class="btn btn-outline-dark">Retour à liste</button></a>

    <a href="{{ path('app_backoffice_artist_edit', {'id': artist.id}) }}"><button type="button" class="btn btn-outline-warning">Éditer</button></a>

    {{ include('backoffice/artist/_delete_form.html.twig') }}
{% endblock %}
